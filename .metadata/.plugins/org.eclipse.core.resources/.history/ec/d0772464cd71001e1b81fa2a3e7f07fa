import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.SwingConstants;
import java.awt.Font;
import javax.swing.JTextField;
import javax.swing.JButton;

public class GuessingGame extends JFrame {
	private JTextField textGuess;
	public GuessingGame() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setTitle("Mark's Hi-Lo Guessing Game");
		getContentPane().setLayout(null);
		
		JLabel lblNewLabel = new JLabel("Mark's Hi-Lo Guessing Game");
		lblNewLabel.setFont(new Font(".AppleSystemUIFont", Font.BOLD, 15));
		lblNewLabel.setHorizontalAlignment(SwingConstants.CENTER);
		lblNewLabel.setBounds(0, 38, 450, 21);
		getContentPane().add(lblNewLabel);
		
		JLabel lblNewLabel_1 = new JLabel("Guess a number between 1 and 100:");
		lblNewLabel_1.setFont(new Font(".AppleSystemUIFont", Font.PLAIN, 13));
		lblNewLabel_1.setHorizontalAlignment(SwingConstants.LEFT);
		lblNewLabel_1.setBounds(6, 97, 243, 16);
		getContentPane().add(lblNewLabel_1);
		
		textGuess = new JTextField();
		textGuess.setHorizontalAlignment(SwingConstants.RIGHT);
		textGuess.setBounds(257, 92, 37, 26);
		getContentPane().add(textGuess);
		textGuess.setColumns(10);
		
		JButton btnNewButton = new JButton("Guess");
		btnNewButton.setBounds(166, 151, 117, 29);
		getContentPane().add(btnNewButton);
		
		JLabel labelOutput = new JLabel("Enter a number in the box above then click Guess.");
		labelOutput.setFont(new Font(".AppleSystemUIFont", Font.PLAIN, 13));
		labelOutput.setHorizontalAlignment(SwingConstants.CENTER);
		labelOutput.setBounds(0, 218, 450, 16);
		getContentPane().add(labelOutput);
	}

	public static void main(String[] args) {
